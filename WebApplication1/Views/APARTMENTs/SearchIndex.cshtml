@model IEnumerable<WebApplication1.Models.APARTMENT>
<br />
<br />

@using (Html.BeginForm("SearchIndex", "APARTMENTs", FormMethod.Get))
{
    @Html.TextBox("Searching")
    <input type="submit" value="Search" />
}
<table class="table table-striped">
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    No Match Any Document
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content(item.Picture)" width="300px" height="200px" />
                    </td>

                    <td>
                        <p><b>@Html.DisplayNameFor(model => model.Size)</b></p>
                        <p><b>@Html.DisplayNameFor(model => model.Beds)</b></p>
                        <p><b>@Html.DisplayNameFor(model => model.Baths)</b></p>
                        <p><b>@Html.DisplayNameFor(model => model.Price)</b></p>
                        <p><b>@Html.DisplayNameFor(model => model.Address)</b></p>
                        <p><b>@Html.DisplayNameFor(model => model.DEVELOPER.DeveloperName)</b></p>

                    </td>
                    <td>
                        <p>@Html.DisplayFor(modelItem => item.Size)</p>
                        <p>@Html.DisplayFor(modelItem => item.Beds)</p>
                        <p>@Html.DisplayFor(modelItem => item.Baths)</p>
                        <p>@Html.DisplayFor(modelItem => item.Price)</p>
                        <p>@Html.DisplayFor(modelItem => item.Address)</p>
                        <p>@Html.DisplayFor(modelItem => item.DEVELOPER.DeveloperName)</p>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ApartmentId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ApartmentId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ApartmentId })
                    </td>
                </tr>
            }
        }

    </tbody>

</table>